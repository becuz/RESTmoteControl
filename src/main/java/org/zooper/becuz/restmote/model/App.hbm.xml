<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.zooper.becuz.restmote.model">

	<class name="App" table="Apps">
		<id name="id" column="appId">
			<generator class="native" />
		</id>
		<property name="family" />
		<property name="name" />
		<property name="windowName" />
		<property name="chosenDefault" />
		<property name="chosen" />
		<property name="os" />
		<property name="path" />
		<property name="argumentsFile" />
		<property name="argumentsDir" />	
		<property name="forceOneInstance" />
		<property name="creationDate" />
		<property name="updateDate" />
		<set name="extensions" table="App_Extensions" lazy="false">
            <key column="appId"/>
            <element type="string" column="extension"/>
        </set>
        <set name="controls" table="App_Controls" 
				cascade="all" 
				lazy="false">
	        <key column="appId"/>
	        <many-to-many column="controlId"
	            unique="true"
	            class="Control"/>
	    </set>
	    <set name="visualControls" table="App_VisualControls" 
				cascade="all" 
				lazy="false">
	        <key column="appId"/>
	        <many-to-many column="controlId"
	            unique="true"
	            class="VisualControl"/>
	    </set>
	</class>

</hibernate-mapping>